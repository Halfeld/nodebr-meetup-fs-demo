div(class='modal fade', id='addFile')
  div(class='modal-dialog', role='document')
    div.modal-content
      div.modal-header
        h5.modal-title Add a file
        button(type='button', class='close', data-dismiss='modal')
        span &times;
      div.modal-body
        div.row
          div.col-md-12
            div.form-group
              input(type='text', class='form-control', id='filename', placeholder="Image name goes here...")
            div.input-group
              div.custom-file
                label(class='custom-file-label', for='fileInput') Choose file
                input(type='file', class='custom-file-input', id='fileInput')
              div.input-group-append
                button(class='btn btn-outline-secondary', type='button', id='upload') Upload file